<style>
  table, th, td {
    font-size: x-large;
    text-align: center;
  }
</style>

<h1>Take a Quiz</h1>
<br>
<%	if notice  %>
    <div class="alert alert-dismissible alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong id ="notice" ><%= notice %></strong>
    </div>
<%	end %>

<% @genres.each do |genre| %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h1 class="panel-title" style="font-size: x-large"><%= genre.name %></h1>
    </div>
    <div class="panel-body">
      <div class="container-fluid">
        <table class="table table-hover">
          <% genre.subgenres.each do |subgenre| %>
              <tr>
                <td><%=	subgenre.name %></td>
                <td><%= link_to "Start Quiz", quiz_play_by_id_path(subgenre.id), :method => :get , class: "btn btn-success "%></td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
<br>
<% end %>